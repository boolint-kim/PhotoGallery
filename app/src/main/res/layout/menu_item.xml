<?xml version="1.0" encoding="utf-8"?>
<!-- 휴대폰 세로모드용: 3열 사진 그리드 아이템 (110dp 이미지) -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/photo_item_margin"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/photo_item_padding">

        <!-- 사진 이미지 (110dp 정사각형) -->
        <ImageView
            android:id="@+id/photoImage"
            android:layout_width="@dimen/photo_image_size"
            android:layout_height="@dimen/photo_image_size"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:contentDescription="@string/photo_image" />

        <!-- 제목 -->
        <TextView
            android:id="@+id/photoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/sample_photo_title"
            android:textColor="?attr/colorOnSurface"
            android:textSize="@dimen/photo_title_text_size"
            android:textStyle="normal"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>